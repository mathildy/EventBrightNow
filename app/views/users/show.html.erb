<br>
<div class="row justify-content-center">
 <h3>Mon profil<h3>
 </div>
<br>


<div class="jumbotron">
  <div class="row justify-content-center">
<div class="card" style="width: 30rem;">
  <div class="card-header">
   Votre identifiant : <%= @users.id %>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Prénom : <%= @users.first_name %></li>
    <li class="list-group-item">Nom : <%= @users.last_name %></li>
    <li class="list-group-item">Email : <%= @users.email %></li>
    <li class="list-group-item">Description : <%= @users.description %></li>
  </ul>
</div>
</div>
<br>
<div class="row justify-content-center">
 <%= link_to "Éditer/compléter mon profil", edit_user_path , class:"btn btn-dark" %>  
</div>
</div>




<div class="row justify-content-center">
<h3>Voici tous les évènements générés par vous-même </h3>
</div>

<div class="row">
  <% @events_user.each do |event| %>
    <div class="col-sm-4" style="padding: 30px">
      <div class="card">
        <div class="card-header">
          <h4><%= event.title %></h4>
          
          <div class="card-body">
          
          <%= link_to "En savoir plus...", event_path(event.id), class:"btn btn-dark" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  
</div> 



