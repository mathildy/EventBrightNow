<div class="col-md-6 offset-md-3">
  <div class="row justify-content-center"> 
  </div>
   <div class="jumbotron">
     <div class="row justify-content-center">
      <div class="card" style="width: 30rem;">
        <div class="container">
          <div class="row justify-content-center">
           <div class="container-fluid">
            <%= form_for(:events,  url:(events_path), action: 'create', method: :post) do |f| %>
             <div class="field">
               <%= f.hidden_field :admin_id, :value => current_user.id %>
             </div><br />
             <div class="field">
               <%= f.label "Titre" %><br />
               <%= f.text_field :title, autofocus: true, autocomplete: :title, class: "form-control" %>
             </div><br />
             <div class="field">
               <%= f.label "Description" %> <br />
               <%= f.text_area :description, placeholder: "20 caractères minimum", autocomplete: :description, class: "form-control" %>
             </div><br />
             <div class="field">
               <%= f.label "Localisation" %> <br />
               <%= f.text_field :location, autocomplete: :location, class: "form-control" %>
            </div><br />
            <div class="field">
               <%= f.label "Date" %> <br />
               <%= f.datetime_field :start_date, autocomplete: :start_date, class: "form-control" %>
            </div><br />
            <div class="field">
               <%= f.label "Durée en minute"%> <br />
               <%= f.text_field :duration, placeholder: "doit finir par 0 ou 5", class: "form-control" %>
            </div><br />
            <div class="field">
               <%= f.label "Prix" %> <br />
               <%= f.number_field :price, autocomplete: :price, class: "form-control" %>
            </div><br />
            <div class="row justify-content-center">
             <div class="actions">
               <%= f.submit "Créer mon event !", class:"btn btn-dark btn-sm" %>
             </div>
            </div>
            <br>
        </div> 
       </div>
      </div>
     </div>
    </div> 
   </div>
  </div>
</div>
 
<% end %>

